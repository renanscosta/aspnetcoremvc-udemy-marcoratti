@model Lanche
<div class="col col-sm-4 col-lg-2 col-md-2">
    <div class="img-thumbnail">
        <p><img src="~/images/@Model.ImagemUrl" class="rounded" alt="" /></p>
    </div>
    <div class="caption">
        <h3 class="pull-righ">@Model.Preco.ToString("c")</h3>
        <h3>
            <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">@Model.Nome</a>
        </h3>
        <p>@Model.DescricaoCurta</p>
    </div>
    <div class="addToCart text-right">
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
                asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
                Incluir no carrinho
            </a>
        </p>
    </div>
</div>